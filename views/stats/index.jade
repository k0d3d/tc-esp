// Page content
#page-content.page-content
  // Contacts Header
  .content-header
    .header-section
      h1
        i.gi.gi-stats
        | Statistics


  // END Contacts Header
  // Main Row
  .row
      .col-sm-6.col-lg-3
        // Widget
        .widget
          .widget-simple
            a.widget-icon.pull-left.themed-background(href='#')
              i.fa.fa-map-pin

            h3.text-right.animation-stretchRight.widget-content
              strong {{_dashboard_data.count_locations || 0}} <br>
              small Locations
        // END Widget
      .col-sm-6.col-lg-3
        // Widget
        .widget
          .widget-simple
            a.widget-icon.pull-right.themed-background-amethyst(href='#')
              i.gi.gi-wallet
            h3.animation-stretchLeft
              | $
              strong 3.595
        // END Widget
      .col-sm-6.col-lg-3
        // Widget
        .widget
          .widget-simple
            a.widget-icon.pull-left.themed-background-night(href='#')
              i.gi.gi-bug
            h3.text-right.animation-stretchRight
              | 3
              strong Bugs
        // END Widget
      .col-sm-6.col-lg-3
        // Widget
        .widget
          .widget-simple
            a.widget-icon.pull-right.themed-background-fire(href='#')
              i.gi.gi-fire
            h3.animation-stretchLeft
              | 1
              strong Crash
        // END Widget
