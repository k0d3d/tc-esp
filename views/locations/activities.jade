// Page content
#page-content.page-content
  // Contacts Header
  .content-header
    .header-section
      h1
        i.gi.gi-stats
        | Feedback
        br
        small {{one_checkin_feedback[0].checkInId.checkInTime | date:'medium'}}
        button.btn.btn-alt.btn-xs.btn-primary Export to Excel
        button.btn.btn-alt.btn-xs.btn-link.btn-default(disabled, style="border: none;color: #000;") Query by:
        button.btn.btn-alt.btn-xs.btn-default Location
        button.btn.btn-alt.btn-xs.btn-default Time Period
        button.btn.btn-alt.btn-xs.btn-default Activity Type

  // END Contacts Header
  // Main Row
  .row
    .block
      .table-responsive
        table#general-table.table.table-hover.table-vcenter.feedback-grid()
          thead
            tr
              th.col-md-4.lighter Activity
              th Status
              th Feedback Assets
              th.lighter Response Time
              //- th.lighter Response
          tbody
            tr(ng-repeat="fd in all_feedback")
              td
                p(style="margin-bottom: 0;") <strong>{{fd.questions}}</strong>
                span CheckIn - {{fd.checkInId._id | shortenId}} at {{fd.locationId.name}}, <span>{{fd.locationId.address}}</span> <span style="color:#1bbae1">{{fd.checkInId.checkInTime | moment}}</span>
              td
                | Active
              td
                  a.btn.btn-alt.btn-link
                    i.fa.fa-thumbs-up(ng-show="fd.decision == 'Yes'", style="color: green") Yes
                    i.fa.fa-thumbs-down(ng-show="fd.decision == 'No'", style="color: red") No

                  a.btn.btn-alt.btn-link(title="{{fd.hasComment}}")
                      i.fa.fa-comment
                  a.btn.btn-alt.btn-link(ng-href="http://stark-cliffs-8842.herokuapp.com/api/v2/locations/{{fd.locationId._id}}/assets/{{fd.hasImage}}", target="_blank")
                      i.fa.fa-picture-o
                  a.btn.btn-alt.btn-link
                      i.fa.fa-video-camera
              td
                span(response-time="fd") {{fd.timeUpdated | moment}}

          tfoot
            pagination.pull-right(page-to="turnPage")
            div.clearfix