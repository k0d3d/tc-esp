// Page content
#page-content
  // Contacts Header
  .content-header
    .header-section
      h1
        i.gi.gi-building
        | Locations
        br
        small Manage all authorized locations!

  // END Contacts Header
  // Main Row
  .row
    .block
      .table-options.clearfix

        .btn-group.btn-group-sm.pull-left(data-toggle='buttons')
            form.navbar-form-custom(role='search', ng-submit="submit_search(qry)")
              .form-group
                input#top-search.form-control(type='text', name='qry', ng-model="qry" placeholder='Search..')


      .table-responsive
        //
          Available Table Classes:
          'table'             - basic table
          'table-bordered'    - table with full borders
          'table-borderless'  - table with no borders
          'table-striped'     - striped table
          'table-condensed'   - table with smaller top and bottom cell padding
          'table-hover'       - rows highlighted on mouse hover
          'table-vcenter'     - middle align content vertically
        table#general-table.table.table-striped.table-vcenter
          thead
            tr
              th.text-center(style='width: 80px;')
                input(type='checkbox')
              th.text-center(style='width: 150px;')
                i.gi.gi-user
              th Location Name
              th Category
              th Author
              th Added On
              th.text-center(style='width: 150px;')
          tbody
            tr(ng-repeat="place in places_list")
              td.text-center
                input#checkbox1-1(type='checkbox', name='checkbox1-1')
              td.text-center
                img.img-circle(src='img/placeholders/avatars/avatar16.png', alt='avatar')
              td
                a(ui-sref='location({locationId: place._id})') {{place.name}}
              td {{place.category}}
              td {{place.author | author_field}}
              td
                a.label.label-warning(href='javascript:void(0)') {{place.dateAdded | date:'medium'}}
                p.label.label-warning(href='javascript:void(0)') <span city-state="place">{{place.formatted_address}}</span>
              td.text-center


          tfoot
            tr
              td(colspan='6')

      // END Table Styles Content
